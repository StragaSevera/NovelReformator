@model IReadOnlyList<LogEntry>

<!DOCTYPE html>

<html>
<head>
    <title>Log Index</title>
    <style>
        table, thead, tr, td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 5px;
        }
    </style>
</head>
<body>
<h1>Log Entries List:</h1>
<partial name="_LogError.cshtml" model="ViewBag.Error"/>
@if (Model.Count != 0)
{
    <table>
        <thead>
        <td>ID</td>
        <td>Type</td>
        <td>Created at</td>
        <td>IP</td>
        <td>Content</td>
        </thead>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.ID</td>
                <td>@entry.Type</td>
                <td>@entry.CreatedAt</td>
                <td>@entry.IP</td>
                <td>@entry.Content</td>
            </tr>
        }
    </table>
}
</body>
</html>