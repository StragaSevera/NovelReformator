@model LogEntry
@{
    Layout = "_Layout";
    ViewBag.Title = $"Log Entry #{Model?.ID ?? -1}";
}

<h1>Log Entry:</h1>
<partial name="_LogError" model="ViewBag.Error"/>
<table>
    <thead>
    <tr>
        <td>ID</td>
        <td>Type</td>
        <td>Created at</td>
        <td>IP</td>
        <td>Content</td>
    </tr>
    </thead>
    @{ ViewBag.ShowLink = false; }
    <tbody>
    <partial name="_LogEntry" model="Model"/>
    </tbody>
</table>

@{ ViewBag.Action = "Edit"; }
<partial name="_LogForm" model="Model"/>